	<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'caracteristicas', a: 'index'} if @coleccion['caracteristicas'].any? %>
	<%= render partial: '0p/tabla/btn_nuevo', locals: {c: 'caracteristicas', a: 'index'} %>
<% elsif @tab == 'Tablas' %>
