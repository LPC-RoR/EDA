<p id="notice"><%= notice %></p>

<h1>Carpetas</h1>

<table>
  <thead>
    <tr>
      <th>Carpeta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carpetas.each do |carpeta| %>
      <tr>
        <td><%= carpeta.carpeta %></td>
        <td><%= link_to 'Show', carpeta %></td>
        <td><%= link_to 'Edit', edit_carpeta_path(carpeta) %></td>
        <td><%= link_to 'Destroy', carpeta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

