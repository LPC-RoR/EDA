<%= render partial: '0p/general/o_titulo', locals: {o: @objeto, a: action_name, size: '5'} %>

<%= render partial: '0p/show/links', locals: {o: @objeto} %>

<% (Publicacion::DOC_TYPES - [@objeto.doc_type]).each do |doc_type| %>
	<%= render partial: '0p/tabla/btn', locals: {texto: "#{doc_type}", link: "/publicaciones/cambia_tipo?publicacion_id=#{@objeto.id}&doc_type=#{doc_type}", delete: false, clr: c_color(controller_name) }  %>
<% end %>
</br></br>
<!-- CARPETAS Y DESPLIEGUE DE CITA -->
<div class='row'>
	<div class= 'col-md-4'>

		<%= render partial: '0p/general/titulo', locals: {c: controller_name, a: nil, titulo: 'Gestion de Carpetas', size: '5'} %>
		<% if @carpetas_seleccion.any? %>
			<%= form_for :carpeta_base, url: "/carpetas/asigna?publicacion_id=#{@objeto.id}" do |form| %>
				<div class='form-inline'>
					<%= form.select :carpeta_id, @carpetas_seleccion.collect { |cpta| [cpta.carpeta, cpta.id] }, include_blank: false, prompt: "Seleccione Carpeta" %>
					<%= form.submit '+ Carpeta'  %>
				</div>
			<% end  %>
		<% end %>

		<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'carpetas', a: 'index'} %>

		<%= render partial: '0p/general/titulo', locals: {c: controller_name, a: nil, titulo: 'Evaluación', size: '5'} %>
		<table class="table table-striped table-sm  thead-dark">
			<tbody>
				<% Publicacion::EVALUACION.keys.each do |item| %>
					<tr>
						<th><small><%= item %></small></th>
						<td>
						<small><%= get_evaluacion_publicacion(@objeto, item) %>
						<% get_btns_evaluacion(@objeto, item).each do |btn| %>
							<%= link_to btn, cambia_evaluacion_publicacion_path(item: item, evaluacion: btn) %>
						<% end %>
						</small>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>

	</div>

	<div class='col-md-8'>

		<h6><%= "| #{@objeto.doc_type} |" %></h6>
		<h6><%= sanitize @objeto.m_quote %></h6>

		<% unless @duplicados_ids.empty? %>
			<% @duplicados.each do |duplicado| %>
				<h6><%= "| "%><%=link_to duplicado.doc_type, duplicado%><%=" |" %></h6>
				<h6><%= sanitize duplicado.m_quote %></h6>
			<% end %>
		<% end %>

		<% unless @objeto.doi.blank? %>
			<small><%= link_to "https://doi.org/#{@objeto.doi}", "https://doi.org/#{@objeto.doi}", target: :blank %></small>
		<% end %>
		</br>
		<small><%= @objeto.abstract %></small>


	</div>

</div>
</br></br>
<div class='row'>
	<% unless ['ingreso', 'papelera', 'duplicado'].include?(@objeto.estado) %>
		<div class='col-md-4'>

			<%#= render partial: '0p/show/inline_form_modelo', locals: {modelo: 'Tema', size: 30} %>

		</div>
		<div class='col-md-8'>
			<%= render partial: '0p/general/titulo', locals: {c: controller_name, a: nil, titulo: '+ Texto', size: '5'} %>
			<% if @temas_seleccion.any? %>
				<%= form_for :texto_base, url: "/textos/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
					<%= form.select :tema_id, @temas_seleccion.collect { |tm| [tm.tema, tm.id] }, include_blank: false, prompt: "Seleccione Tema" %>
					<%= form.select :clasificacion, Clasificacion::CLASIFICACION, include_blank: false, prompt: "Seleccione Clasificacion" %>
					<div class='form-inline'>
						<%= form.text_field(:texto, size: 80, class: 'form-control' ) %>
						<%= form.submit '+ Texto'  %>
					</div>
				<% end  %>
			<% end %>
			</br>
			<%= render partial: '0p/tabla/tabla', locals: {c: 'textos', a: 'index'} unless @coleccion['textos'].empty? %>
			</br>

			<!-- METODOLOGIA AUN NO DEFINID--> 
			<%#= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: '+ Metodología', size: '5'} %>
			<%#= form_for :nueva_metodologia, url: "/metodologias/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
				<!--div class='form-inline'-->
					<%#= form.text_field(:metodologia, size: 74, class: 'form-control' ) %>
					<%#= form.submit '+ Metodologia'  %>
				<!--/div-->
			<%# end  %>

		</div>
	<% end %>
</div>
