<div class='row'>
	<% unless @objeto.estado == 'ingreso' %>
		<div class='col-md-4'>
			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Evaluación', size: '5'} %>
			<table class="table table-striped table-sm  thead-dark">
				<tbody>
					<% Publicacion::EVALUACION.keys.each do |item| %>
						<tr>
							<th><small><%= item %></small></th>
							<td>
							<small><%= get_evaluacion_publicacion(o, item) %>
							<% get_btns_evaluacion(o, item).each do |btn| %>
								<%= link_to btn, cambia_evaluacion_publicacion_path(item: item, evaluacion: btn) %>
								<%#= link_to btn, link: "/publicaciones/cambia_evaluacion?publicacion_id=#{o.id}&item=#{item}&evaluacion=#{btn}" %>
							<% end %>
							</small>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class='col-md-8'>
			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: '+ Tema', size: '5'} %>
			<%= form_for :nuevo_tema, url: "/temas/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
				<div class='form-inline'>
					<%= form.text_field(:tema, size: 80, class: 'form-control' ) %>
					<%= form.submit '+ Tema'  %>
				</div>
			<% end  %>
			</br>

			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: '+ Texto', size: '5'} %>
			<% if @activo.temas.any? %>
				<%= form_for :texto_base, url: "/textos/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
					<%= form.select :tema_id, @activo.temas.collect { |p| [p.tema, p.id] }, include_blank: true, prompt: "Seleccione Tema" %>
					<div class='form-inline'>
						<%= form.text_field(:texto, size: 80, class: 'form-control' ) %>
						<%= form.submit '+ Texto'  %>
					</div>
				<% end  %>
			<% end %>
			</br>

			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: '+ Metodología', size: '5'} %>
			<%= form_for :nueva_metodologia, url: "/metodologias/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
				<div class='form-inline'>
					<%= form.text_field(:metodologia, size: 74, class: 'form-control' ) %>
					<%= form.submit '+ Metodologia'  %>
				</div>
			<% end  %>

		</div>
	<% end %>
</div>



