<%= render partial: '0p/general/titulo', locals: {c: controller_name, a: nil, titulo: 'Publicaciones', size: '5'} %>
<div class='row'>
	<div class='col-md-3'>

		<!-- RESUMEN DE PUBLICAIONES -->
		<table class="table table-striped table-sm  thead-dark">
		  <thead>
		   	<%#= render partial: '0p/tabla/th', locals: {c: alias_tabla(c)} %>
		  </thead>

		  <tbody>
		  	<tr>
		  		<td><small>TOTAL</small></td><td><small><%= @n_ids_pubs %></small></td>
		  	</tr>
		  </tbody>
		</table>

		<%= render partial: '0p/list/selector', locals: {titulo: 'Carpetas', list: @list_selector, sel: @sel, options: @options} %>

		</br>
		<%= render partial: '0p/general/titulo', locals: {c: 'reportes', a: nil, titulo: 'Reportes', size: '5'} %>
		<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'reportes', a: 'index'} if @coleccion['reportes'].any? %>
		<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {c: 'reportes', o: @proyecto_activo} %>

		</br></br>
		<%= render partial: '0p/general/titulo', locals: {c: 'caracterizaciones', a: nil, titulo: 'Caracterizaciones', size: '5'} %>
		<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'caracterizaciones', a: 'index'} if @coleccion['caracterizaciones'].any? %>
		<%= render partial: '0p/tabla/ext_btn_nuevo', locals: {c: 'caracterizaciones', o: @proyecto_activo} %>
	</div>
	<div class='col-md-9'>
		<%= render partial: '0p/tabs/tabs', locals: {tabs: c_tabs('publicaciones'), tag: 'tab', active: @tab} %>

		<%= paginate @coleccion['publicaciones'], outer_window: 3 %>
		<small><small><%= page_entries_info(@coleccion['publicaciones']) %></small></small>
		<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'publicaciones', a: 'index'} %>
		<%= paginate @coleccion['publicaciones'], outer_window: 3 %>
	</div>
</div>
