<table class="table table-striped table-sm  thead-dark">
  <tbody>
  	<!-- OpciÃ³n para evitar escribir el parcial _modelo.html.erb en cada controlador-->
  	<% unless coleccion.blank? %>
	  	<% coleccion.each do |objeto| %>
	  		<tr>
	  			<td>
					<%= image_tag "#{objeto.imagen? ? objeto.imagen.thumb.url : 'avatar_defecto.png'}", class: "rounded mx-auto d-block img-thumbnail" %>
				</td>
				<td>
					<p>
					<%= link_to objeto.nota, objeto, target: '_blank' %></br><small><%= objeto.imagen.url.split('/').last %></small>
					</p>
				</td>
				<td><%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: objeto} %></td>
			</tr>
		<% end  %>
  	<% end %>
  </tbody>
</table>
