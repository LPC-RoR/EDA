<!-- SHOW -->

<!-- TITULO NORMAL: se usa 'titulo_ruta' -->
<%= render partial: '0p/general/o_titulo', locals: {o: @objeto, a: action_name, size: '5'} if d_show(controller_name, :titulo) %>

<!-- TITULO NAV -->
<!--%= render partial: '0p/show/detalle', locals: {c: controller_name} if d_show(controller_name, :nav) %-->

<!-- SHOW DISPLAY -->
<%= render partial: '0p/show/detalle', locals: {c: controller_name, o: @objeto} if d_show(controller_name, :detalle) %>

<% if d_show(controller_name, :tabs) %>
	<!-- TABS generado desde un ARREGLO -->
	<%= render partial: '0p/tabs/tabs', locals: {tabs: has_many_tabs(controller_name), link_tabs: "/#{controller_name}/#{@objeto.id}?tab=", active: @tab} %>
	<!--%= @tab %-->
	<%= render partial: '0p/tabla/tabla', locals: {c: alias_tabla(@tab), a: 'index'} %>
<% end %>

<!-- DOCS -->
<%= render partial: 'apariencia/attachments' if d_show(controller_name, :adjuntos) %>

