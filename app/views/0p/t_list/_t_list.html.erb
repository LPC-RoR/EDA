<div class='row'>
	<div class='col-md-4'>
		<div class="p-3 mb-2 bg-info text-white"><%= titulo %></div>
		<table class="table table-striped table-sm  thead-dark">
			<thead>
				<%= render partial: '0p/tabla/th', locals: {c: c} %>
			</thead>

			<tbody>
				<!-- OpciÃ³n para evitar escribir el parcial _modelo.html.erb en cada controlador-->
				<% unless @tl_coleccion.blank? %>
			  	<% @tl_coleccion.each do |objeto| %>
				  	<%= render partial: "/0p/tabla/modelo", locals: {a: a, objeto: objeto} %>
				<% end  %>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class='col-md-8'>
		<%= form_for :instancia_nuevo, url: "/instancias/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
			<div class='row'>
				<div class = 'col-sm-3'>
					<%= form.select :concepto_id, Concepto.all.collect { |c| [c.concepto, c.id] } %>
				</div>
				<div class = 'col-sm-7'>
				<%= form.text_field(:instancia, class: 'form-control' ) %>
				</div>
				<div class = 'col-sm-2'>
				<%= form.submit '+ Ruta' %>
				</div>
			</div>
		<% end  %>
	</div>
</div>