<!-- Pregunta si esta acción de recursos despliega TABS -->
<!-- Si es así, obtiene los TABSv del modelo Recurso -->
<% if recursos_tabs?(action_name) %>
	<%= render partial: '0p/tabs/tabs', locals: {tabs: recursos_tabs(action_name), link_tabs: get_link(controller_name, 'ftab'), active: @ftab } %>
<% end %>

<!-- Pregunta si esta acción despliega una TABLA, si es asi la despliega -->
<% if recursos_tabla?(action_name) %>
	<%= render partial: '0p/tabla/tabla', locals: {c: alias_tabla(@ftab), a: 'index'} %>
<% end %>
