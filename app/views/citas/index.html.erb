<p id="notice"><%= notice %></p>

<h1>Citas</h1>

<table>
  <thead>
    <tr>
      <th>Publicacion</th>
      <th>Texto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citas.each do |cita| %>
      <tr>
        <td><%= cita.publicacion_id %></td>
        <td><%= cita.texto_id %></td>
        <td><%= link_to 'Show', cita %></td>
        <td><%= link_to 'Edit', edit_cita_path(cita) %></td>
        <td><%= link_to 'Destroy', cita, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cita', new_cita_path %>
