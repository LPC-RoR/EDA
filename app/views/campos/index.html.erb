<p id="notice"><%= notice %></p>

<h1>Campos</h1>

<table>
  <thead>
    <tr>
      <th>Campo</th>
      <th>Orden</th>
      <th>Cursiva</th>
      <th>Negrita</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campos.each do |campo| %>
      <tr>
        <td><%= campo.campo %></td>
        <td><%= campo.orden %></td>
        <td><%= campo.cursiva %></td>
        <td><%= campo.negrita %></td>
        <td><%= link_to 'Show', campo %></td>
        <td><%= link_to 'Edit', edit_campo_path(campo) %></td>
        <td><%= link_to 'Destroy', campo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

